<Window x:Class="InvestmentCalculators.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:oxy="http://oxyplot.org/wpf"
        xmlns:local="clr-namespace:InvestmentCalculators"
        xmlns:vm="clr-namespace:InvestmentCalculator.ViewModels"
        Title="Investment Calculators" Height="850" Width="2000" Background="Black">
    <Window.DataContext>
        <vm:MainViewModel />
    </Window.DataContext>
    <Window.Resources>
        <local:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <!-- Define styles for dark theme -->
        <Style TargetType="Label">
            <Setter Property="Foreground" Value="White"/>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#333333"/>
            <!-- Dark gray for contrast -->
            <Setter Property="BorderBrush" Value="Gray"/>
        </Style>
        <Style TargetType="CheckBox">
            <Setter Property="Foreground" Value="White"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#444444"/>
            <!-- Slightly lighter gray -->
            <Setter Property="BorderBrush" Value="Gray"/>
        </Style>
        <Style TargetType="TabItem">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="Black"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Border Background="{TemplateBinding Background}" BorderBrush="Gray" BorderThickness="1" Margin="0,0,2,0">
                            <ContentPresenter ContentSource="Header" Margin="5" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="#555555"/>
                                <!-- Highlight selected tab -->
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style TargetType="Separator">
            <Setter Property="Background" Value="Gray"/>
        </Style>
    </Window.Resources>
    <TabControl Margin="10" Background="Black">
        <!-- Tab 1: Investment Calculator -->
        <TabItem Header="Investment Calculator">
            <Grid Margin="10" Background="Black">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <!-- For Labels -->
                    <ColumnDefinition Width="*"/>
                    <!-- For TextBoxes and Button -->
                </Grid.ColumnDefinitions>
                <!-- Principal -->
                <Label Content="Principal Amount ($):" Grid.Row="0" Grid.Column="0"/>
                <TextBox x:Name="PrincipalTextBox" Grid.Row="0" Grid.Column="1" Margin="120,0,0,5" Height="25"/>

                <!-- Interest Rate -->
                <Label Content="Annual Interest Rate (%):" Grid.Row="1" Grid.Column="0"/>
                <TextBox x:Name="RateTextBox" Grid.Row="1" Grid.Column="1" Margin="120,0,0,5" Height="25"/>

                <!-- Time -->
                <Label Content="Time (Years):" Grid.Row="2" Grid.Column="0"/>
                <TextBox x:Name="TimeTextBox" Grid.Row="2" Grid.Column="1" Margin="120,0,0,5" Height="25"/>

                <!-- Compound Interest Checkbox -->
                <CheckBox x:Name="CompoundCheckBox" Content="Compound Interest?" Grid.Row="3" Grid.Column="0" Margin="0,0,0,5" 
                  VerticalAlignment="Center"/>

                <!-- Compounding Frequency (Visible only if compound checked) -->
                <Label Content="Compounding Frequency:" Grid.Row="4" Grid.Column="0" Visibility="{Binding IsChecked, 
                    ElementName=CompoundCheckBox, 
                    Converter={StaticResource BooleanToVisibilityConverter}}"/>
                <TextBox x:Name="FrequencyTextBox" Grid.Row="4" Grid.Column="1" Margin="120,0,0,5" Height="25" 
                 Visibility="{Binding IsChecked, 
                    ElementName=CompoundCheckBox, 
                    Converter={StaticResource BooleanToVisibilityConverter}}"/>

                <!-- Calculate Button -->
                <Button x:Name="CalculateButton" Content="Calculate" Grid.Row="5" Grid.Column="1" Margin="0,10,0,0" Width="100" 
                Height="30" Click="CalculateButton_Click"/>

                <!-- Result -->
                <Label x:Name="ResultLabel" Content="Future Value: " Grid.Row="6" Grid.Column="0" Margin="0,10,0,0" 
               FontWeight="Bold"/>
            </Grid>
        </TabItem>
        <!-- Tab 2: Crypto Calculators -->
        <TabItem Header="Crypto Calculators">
            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                <StackPanel Margin="10" Background="Black">
                    <Grid Margin="10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <!-- For Labels -->
                            <ColumnDefinition Width="*"/>
                            <!-- For TextBoxes and Button -->
                        </Grid.ColumnDefinitions>
                        <!-- Dogecoin Section -->
                        <Label Content="Dogecoin:" Grid.Row="0" Grid.Column="0" Foreground="White"/>
                        <Label Content="Historical data:" Grid.Row="1" Grid.Column="0" Foreground="White"/>
                        <Label Content="( Until March 25th 2025, bull market )" Grid.Row="1" Grid.Column="2" Foreground="White"/>
                        <Label Content="Average annual return rate from birth (2013-Dec-15th):" Grid.Row="2" Grid.Column="1" Foreground="White"/>
                        <Label Content="{Binding CryptoViewModel.DogeViewModel.CAGRFromBirth}" Grid.Row="2" Grid.Column="2" Foreground="White"/>
                        <Label Content="Average annual return rate from 10 years ago (2015-March-25th):" Grid.Row="3" Grid.Column="1" Foreground="White"/>
                        <Label Content="{Binding CryptoViewModel.DogeViewModel.CAGR10Years}" Grid.Row="3" Grid.Column="3" Foreground="White"/>
                        <Label Content="Average annual return rate from 9 years ago (2016-March-25th):" Grid.Row="4" Grid.Column="1" Foreground="White"/>
                        <Label Content="{Binding CryptoViewModel.DogeViewModel.CAGR9Years}" Grid.Row="4" Grid.Column="4" Foreground="White"/>
                        <Label Content="Average annual return rate from 8 years ago (2017-March-25th):" Grid.Row="5" Grid.Column="1" Foreground="White"/>
                        <Label Content="{Binding CryptoViewModel.DogeViewModel.CAGR8Years}" Grid.Row="5" Grid.Column="4" Foreground="White"/>
                        <Label Content="Average annual return rate from 7 years ago (2018-March-26th, bull market):" Grid.Row="6" Grid.Column="1" Foreground="White"/>
                        <Label Content="{Binding CryptoViewModel.DogeViewModel.CAGR7Years}" Grid.Row="6" Grid.Column="4" Foreground="White"/>
                        <Label Content="Average annual return rate from 6 years ago (2019-March-27th):" Grid.Row="7" Grid.Column="1" Foreground="White"/>
                        <Label Content="{Binding CryptoViewModel.DogeViewModel.CAGR6Years}" Grid.Row="7" Grid.Column="4" Foreground="White"/>
                        <Label Content="Average annual return rate from 5 years ago (2020-March-27th):" Grid.Row="8" Grid.Column="1" Foreground="White"/>
                        <Label Content="{Binding CryptoViewModel.DogeViewModel.CAGR5Years}" Grid.Row="8" Grid.Column="4" Foreground="White"/>
                        <Label Content="Average annual return rate from 4 years ago (2021-March-23th, bull market):" Grid.Row="9" Grid.Column="1" Foreground="White"/>
                        <Label Content="{Binding CryptoViewModel.DogeViewModel.CAGR4Years}" Grid.Row="9" Grid.Column="4" Foreground="White"/>
                        <Label Content="Average annual return rate from 3 years ago (2022-March-24th, bull market):" Grid.Row="10" Grid.Column="1" Foreground="White"/>
                        <Label Content="{Binding CryptoViewModel.DogeViewModel.CAGR3Years}" Grid.Row="10" Grid.Column="4" Foreground="White"/>
                        <Label Content="Average annual return rate from 2 years ago (2023-March-26th):" Grid.Row="11" Grid.Column="1" Foreground="White"/>
                        <Label Content="{Binding CryptoViewModel.DogeViewModel.CAGR2Years}" Grid.Row="11" Grid.Column="4" Foreground="White"/>
                        <Label Content="Average annual return rate from 1 year ago (2024-March-27th, bull market):" Grid.Row="12" Grid.Column="1" Foreground="White"/>
                        <Label Content="{Binding CryptoViewModel.DogeViewModel.CAGR1Year}" Grid.Row="12" Grid.Column="4" Foreground="White"/>
                        <!-- Horizontal Line Break -->
                        <Separator Grid.Row="13" Grid.Column="0" Grid.ColumnSpan="3" Margin="0,10,0,10"/>
                        <!-- Bitcoin Section -->
                        <Label Content="Bitcoin:" Grid.Row="14" Grid.Column="0" Foreground="White"/>
                        <Label Content="Historical data:" Grid.Row="15" Grid.Column="0" Foreground="White"/>
                        <Label Content="( Until March 26th 2025, bull market )" Grid.Row="15" Grid.Column="2" Foreground="White"/>
                        <Label Content="Average annual return rate from birth (2009-Oct-15th):" Grid.Row="16" Grid.Column="1" Foreground="White"/>
                        <Label Content="{Binding CryptoViewModel.BTCViewModel.CAGRFromBirth}" Grid.Row="16" Grid.Column="2" Foreground="White"/>
                        <Label Content="Average annual return rate from 10 years ago (2015-March-28th):" Grid.Row="17" Grid.Column="1" Foreground="White"/>
                        <Label Content="{Binding CryptoViewModel.BTCViewModel.CAGR10Years}" Grid.Row="17" Grid.Column="2" Foreground="White"/>
                        <Label Content="Average annual return rate from 9 years ago (2016-March-23th):" Grid.Row="18" Grid.Column="1" Foreground="White"/>
                        <Label Content="{Binding CryptoViewModel.BTCViewModel.CAGR9Years}" Grid.Row="18" Grid.Column="2" Foreground="White"/>
                        <Label Content="Average annual return rate from 8 years ago (2017-March-28th):" Grid.Row="19" Grid.Column="1" Foreground="White"/>
                        <Label Content="{Binding CryptoViewModel.BTCViewModel.CAGR8Years}" Grid.Row="19" Grid.Column="2" Foreground="White"/>
                        <Label Content="Average annual return rate from 7 years ago (2018-March-24th, bull market):" Grid.Row="20" Grid.Column="1" Foreground="White"/>
                        <Label Content="{Binding CryptoViewModel.BTCViewModel.CAGR7Years}" Grid.Row="20" Grid.Column="2" Foreground="White"/>
                        <Label Content="Average annual return rate from 6 years ago (2019-March-29th):" Grid.Row="21" Grid.Column="1" Foreground="White"/>
                        <Label Content="{Binding CryptoViewModel.BTCViewModel.CAGR6Years}" Grid.Row="21" Grid.Column="2" Foreground="White"/>
                        <Label Content="Average annual return rate from 5 years ago (2020-March-24th):" Grid.Row="22" Grid.Column="1" Foreground="White"/>
                        <Label Content="{Binding CryptoViewModel.BTCViewModel.CAGR5Years}" Grid.Row="22" Grid.Column="2" Foreground="White"/>
                        <Label Content="Average annual return rate from 4 years ago (2021-March-30th, bull market):" Grid.Row="23" Grid.Column="1" Foreground="White"/>
                        <Label Content="{Binding CryptoViewModel.BTCViewModel.CAGR4Years}" Grid.Row="23" Grid.Column="2" Foreground="White"/>
                        <Label Content="Average annual return rate from 3 years ago (2022-March-27th, bull market):" Grid.Row="24" Grid.Column="1" Foreground="White"/>
                        <Label Content="{Binding CryptoViewModel.BTCViewModel.CAGR3Years}" Grid.Row="24" Grid.Column="2" Foreground="White"/>
                        <Label Content="Average annual return rate from 2 years ago (2023-March-24th):" Grid.Row="25" Grid.Column="1" Foreground="White"/>
                        <Label Content="{Binding CryptoViewModel.BTCViewModel.CAGR2Years}" Grid.Row="25" Grid.Column="2" Foreground="White"/>
                        <Label Content="Average annual return rate from 1 year ago (2024-March-28th, bull market):" Grid.Row="26" Grid.Column="1" Foreground="White"/>
                        <Label Content="{Binding CryptoViewModel.BTCViewModel.CAGR1Year}" Grid.Row="26" Grid.Column="2" Foreground="White"/>
                    </Grid>
                    <!-- Horizontal Line Break -->
                    <Separator Margin="0,10,0,10"/>
                    <Grid Height="400" Width="2000" Margin="10">
                        <oxy:PlotView Model="{Binding CryptoPlotModel}" />
                    </Grid>
                </StackPanel>
            </ScrollViewer>
        </TabItem>
        <!-- Tab 3: Stock Calculators -->
        <TabItem Header="Stock Calculators">
            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                <StackPanel Margin="10" Background="Black">
                    <Grid Margin="10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <!-- Costco Section -->
                        <Label Content="QQQ: (Excluding dividends)" Grid.Row="0" Grid.Column="0" Foreground="White"/>
                        <Label Content="Historical data:" Grid.Row="1" Grid.Column="0" Foreground="White"/>
                        <Label Content="( Until Dec 19th 2025 )" Grid.Row="1" Grid.Column="2" Foreground="White"/>
                        <Label Content="Average annual return rate from 5 years ago (2020-Dec-21st):" Grid.Row="2" Grid.Column="1" Foreground="White"/>
                        <Label Content="{Binding StockViewModel.QQQViewModel.CAGR5Years}" Grid.Row="2" Grid.Column="2" Foreground="White"/>
                        <Label Content="Average annual return rate from 4 years ago (2021-Dec-20th):" Grid.Row="3" Grid.Column="1" Foreground="White"/>
                        <Label Content="{Binding StockViewModel.QQQViewModel.CAGR4Years}" Grid.Row="3" Grid.Column="2" Foreground="White"/>
                        <Label Content="Average annual return rate from 3 years ago (2022-Dec-19th):" Grid.Row="4" Grid.Column="1" Foreground="White"/>
                        <Label Content="{Binding StockViewModel.QQQViewModel.CAGR3Years}" Grid.Row="4" Grid.Column="2" Foreground="White"/>
                        <Label Content="Average annual return rate from 2 years ago (2023-Dec-18th):" Grid.Row="5" Grid.Column="1" Foreground="White"/>
                        <Label Content="{Binding StockViewModel.QQQViewModel.CAGR2Years}" Grid.Row="5" Grid.Column="2" Foreground="White"/>
                        <Label Content="Average annual return rate from 1 year ago (2024-Dec-16th):" Grid.Row="6" Grid.Column="1" Foreground="White"/>
                        <Label Content="{Binding StockViewModel.QQQViewModel.CAGR1Year}" Grid.Row="6" Grid.Column="2" Foreground="White"/>
                        <!-- Horizontal Line Break -->
                        <Separator Grid.Row="7" Grid.Column="0" Grid.ColumnSpan="3" Margin="0,10,0,10"/>
                        <Label Content="Costco: (Excluding dividends)" Grid.Row="8" Grid.Column="0" Foreground="White"/>
                        <Label Content="Historical data:" Grid.Row="9" Grid.Column="0" Foreground="White"/>
                        <Label Content="( Until Dec 19th 2025 )" Grid.Row="9" Grid.Column="2" Foreground="White"/>
                        <Label Content="Average annual return rate from 5 years ago (2020-Dec-21st):" Grid.Row="10" Grid.Column="1" Foreground="White"/>
                        <Label Content="{Binding AssetPerformances[0].CAGR5Years}" ContentStringFormat="P2" Grid.Row="10" Grid.Column="2" Foreground="White"/>
                        <Label Content="Average annual return rate from 4 years ago (2021-Dec-20th):" Grid.Row="11" Grid.Column="1" Foreground="White"/>
                        <Label Content="{Binding AssetPerformances[0].CAGR4Years}" ContentStringFormat="P2" Grid.Row="11" Grid.Column="2" Foreground="White"/>
                        <Label Content="Average annual return rate from 3 years ago (2022-Dec-19th):" Grid.Row="12" Grid.Column="1" Foreground="White"/>
                        <Label Content="{Binding AssetPerformances[0].CAGR3Years}" ContentStringFormat="P2" Grid.Row="12" Grid.Column="2" Foreground="White"/>
                        <Label Content="Average annual return rate from 2 years ago (2023-Dec-18th):" Grid.Row="13" Grid.Column="1" Foreground="White"/>
                        <Label Content="{Binding AssetPerformances[0].CAGR2Years}" ContentStringFormat="P2" Grid.Row="13" Grid.Column="2" Foreground="White"/>
                        <Label Content="Average annual return rate from 1 year ago (2024-Dec-16th):" Grid.Row="14" Grid.Column="1" Foreground="White"/>
                        <Label Content="{Binding AssetPerformances[0].CAGR1Year}" ContentStringFormat="P2" Grid.Row="14" Grid.Column="2" Foreground="White"/>
                        <!-- Horizontal Line Break -->
                        <Separator Grid.Row="15" Grid.Column="0" Grid.ColumnSpan="3" Margin="0,10,0,10"/>
                        <!-- Tesla Section -->
                        <Label Content="Tesla:" Grid.Row="16" Grid.Column="0" Foreground="White"/>
                    </Grid>
                </StackPanel>
            </ScrollViewer>
        </TabItem>
        <!-- Tab 4: Placeholder for Real Estates Calculators -->
        <TabItem Header="Real Estate Calculators">
            <Grid>
                <TextBlock Text="This is a placeholder for real estate calculators." HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Grid>
        </TabItem>
    </TabControl>
</Window>